<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.IndiaStatesChartFragment">

    <TextView
        android:id="@+id/indian_state_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="State Name"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="10dp"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/state_tested"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Tested: 12345"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/cardview_dark_background"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:background="@drawable/home_fragment_card_border"></TextView>
            <TextView
                android:id="@+id/state_confirmed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Confirmed: 12345"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/cardview_dark_background"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:background="@drawable/home_fragment_card_border"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/state_recovered"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Recovered: 12345"
                android:fontFamily="@font/montserrat"
                android:textSize="13sp"
                android:textColor="@color/cardview_dark_background"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:background="@drawable/home_fragment_card_border"></TextView>
            <TextView
                android:id="@+id/state_deceased"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="Deceased: 12345"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/cardview_dark_background"
                android:textSize="13sp"
                android:padding="5dp"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:background="@drawable/home_fragment_card_border"></TextView>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view_India"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="0dp"
                android:visibility="visible"
                android:layout_alignParentTop="true" />

            <com.anychart.AnyChartView
                android:id="@+id/any_chart_view_test"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:visibility="visible"
                android:layout_below="@id/any_chart_view_India" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>